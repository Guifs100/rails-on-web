<h1>Login to your account</h1>
<% if flash[:error] %>
    <p><%= flash[:error] %></p>
<% end %>

<%= form_with scope: :session, url: login_path, data: {turbo: false} do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Login" %>
<% end %>

<p>Don't have an account? <%= link_to "Sign up", signup_path %></p>

<h3> Or login with Google</h3>

<%= button_to 'Login with Google', '/auth/google_oauth2', data: { turbo: false } %>
<%= button_to 'Login with Cognito', '/auth/cognito_idp', data: { turbo: false } %>
