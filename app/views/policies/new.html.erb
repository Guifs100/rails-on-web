<h2>New Policy</h2>
<div style="margin: 0px auto; max-width: 720px;" class="container">

<%= form_with scope: :policy, url: create_policies_path, data: {turbo: false} do |form| %>
    <div>
      <%= form.label :insured_name, 'Insured Name:', class: 'label' %>
      <%= form.text_field :insured_name, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :insured_cpf, 'Insured CPF:' %>
      <%= form.text_field :insured_cpf, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :date_issue, 'Policy Start in:', class: 'label' %>
      <%= form.date_field :date_issue,required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :policy_expiration, 'Policy Finish in:', class: 'label' %>
      <%= form.date_field :policy_expiration,required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :license_plate, 'License Plate:', class: 'label' %>
      <%= form.text_field :license_plate, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :brand, 'Car Brand:', class: 'label' %>
      <%= form.text_field :brand, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :model, 'Car Model:', class: 'label' %>
      <%= form.text_field :model, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :year, 'Car Year:', class: 'label' %>
      <%= form.number_field :year, required: true, class: 'input' %>
    </div>

    <div>
      <br />
      <%= form.submit 'Create Policy', class: 'button is-link' %>
    </div>
<% end %>

<%= button_to 'Home', root_path, method: :get, data: { turbo: false } %>
    </div>
